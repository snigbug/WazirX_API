    <h1>Top 10 Cryptocurrencies on WAZIRX </h1>
    <p>{{foo}}</p>
    <table id="crypto-table" class="table bg-dark table-striped p-4 border-2 border-black m-10 table-responsive mx-auto p-5 rounded" style="width: 800px; ">
        <thead >
            <tr>
                <th scope="col ">Name</th>
                <th scope="col">Last Price</th>
                <th scope="col">Buy Price</th>
                <th scope="col">Sell Price</th>
                <th scope="col">Volume</th>
                <th scope="col">Base Unit</th>
            </tr>
        </thead>
        <tbody class="rounded " style="background-color: #191d28;">
            <!-- Data will be populated here -->
        </tbody>
    </table>

    <script>
        // Fetch data from the backend API
        fetch('/api')
            .then(response => response.json())
            .then(data => {
                const tableBody = document.getElementById('crypto-table').getElementsByTagName('tbody')[0];
                Object.keys(data).splice(0,10).forEach(item => {
                    const row = tableBody.insertRow();
                    row.insertCell().textContent = data[item].name;
                    row.insertCell().textContent = data[item].last;
                    row.insertCell().textContent = data[item].buy;
                    row.insertCell().textContent = data[item].sell;
                    row.insertCell().textContent = data[item].volume;
                    row.insertCell().textContent = data[item].base_unit;
                });
            })
            .catch(error => console.error('Error fetching data:', error));
    </script>
